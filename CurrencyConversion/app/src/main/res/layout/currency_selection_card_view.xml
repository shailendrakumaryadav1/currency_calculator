<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:id="@+id/currency_selection_card"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:cardElevation="@dimen/currency_cardview_elevation"
		app:cardCornerRadius="@dimen/currency_cardview_radius"
		android:shape="ring"
		android:thicknessRatio="@dimen/currency_cardview_thickness_ratio">

	<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:padding="@dimen/dimen_15">

		<ImageView
				android:id="@+id/currency_selection_flag"
				android:layout_width="@dimen/flag_width"
				android:layout_height="@dimen/flag_width"
				android:layout_margin="@dimen/dimen_5"
				android:layout_centerVertical="true"
				android:contentDescription="@null" />

		<TextView
				android:id="@+id/currency_selection_text"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				style="@style/text_dark_gray"
				android:layout_marginLeft="@dimen/dimen_10"
				android:layout_marginStart="@dimen/dimen_10"
				android:layout_marginEnd="@dimen/dimen_10"
				android:layout_marginRight="@dimen/dimen_10"
				android:ellipsize="end"
				android:maxLines="@integer/max_amount_lines"
				android:textSize="@dimen/text_currency_name"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@+id/currency_selection_flag"
				android:layout_toEndOf="@+id/currency_selection_flag" />

		<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginRight="@dimen/dimen_2"
				android:layout_marginEnd="@dimen/dimen_2"
				android:text="@string/text_arrow_right"
				android:layout_centerVertical="true"
				style="@style/text_dark_gray"
				android:textStyle="bold"
				android:textSize="@dimen/text_drop_down_arrow"
				android:layout_alignParentEnd="true"
				android:layout_alignParentRight="true" />

	</RelativeLayout>

</android.support.v7.widget.CardView>

